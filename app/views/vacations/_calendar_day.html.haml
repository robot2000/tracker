%li{ class: class_for_calendar_item(date), data: { month_title: (l(date, format: :month) if date.day == 1)}, id: l(date) }
  .calendar__day{ class: generate_vacation_day_classes_for(date) }
    = l date, format: :number
  - vacation_dates[date].to_a.each do |vacation|
    - if vacation.present?
      .holiday-line.holiday-line_weekday.hint{ class: [generate_vacation_day_status(vacation)],  data: { hint: (vacation.user.full_name), user_id: (vacation.user_id), status: ("#{vacation.status}") }}
    - else
      .holiday-line
